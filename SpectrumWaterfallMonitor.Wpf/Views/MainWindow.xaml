<Window x:Class="SpectrumWaterfallMonitor.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:waterfall="clr-namespace:SpectrumWaterfallMonitor.Controls.Waterfall;assembly=SpectrumWaterfallMonitor.Controls"
        xmlns:spectrum="clr-namespace:SpectrumWaterfallMonitor.Controls.Spectrum;assembly=SpectrumWaterfallMonitor.Controls"
        xmlns:viewModels="clr-namespace:SpectrumWaterfallMonitor.Wpf.ViewModels"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:SpectrumWaterfallMonitor.Wpf"
        mc:Ignorable="d"
        Title="Spectrum and Waterfall monitor" Height="650" Width="950">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Старт" Width="90" Margin="0,0,8,0" Command="{Binding StartCommand}"/>
            <Button Content="Стоп" Width="90" Command="{Binding StopCommand}"/>

            <TextBlock Text="Preset:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
            <ComboBox Width="320"
              ItemsSource="{Binding Presets}"
              SelectedItem="{Binding SelectedPreset}"
              DisplayMemberPath="Name"/>

        </StackPanel>

        <Border Grid.Row="1" CornerRadius="6" BorderBrush="#2a2a2a" BorderThickness="1" Padding="6" Background="#000">
            <spectrum:SpectrumControl SpectrumFrame="{Binding CurrentFrame}"/>
        </Border>

        <Border Grid.Row="2" CornerRadius="6" BorderBrush="#2a2a2a" BorderThickness="1" Padding="6" Background="#000" Margin="0,8,0,0">
            <waterfall:WaterfallControl SpectrumFrame="{Binding CurrentFrame}"
                                      HistoryLineCount="{Binding HistoryLineCount}"/>
        </Border>
    </Grid>
</Window>
